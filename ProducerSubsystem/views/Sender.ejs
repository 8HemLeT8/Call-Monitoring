    <link rel="stylesheet" href="css/styles.css">

    <!-- socket functions  -->
    <script src="scripts/MySocket.js"></script>

    <!-- table scripts for adding and sending calls -->
    <script src="scripts/TableContent.js"></script>
</head>

<body onload="initSocket()">
    <h1> Call Center</h1>

    <hr>

    <label for="">Total waiting calls: </label>
    <input type="number" id="total" onkeydown="return false;" min="0" max="200" value="0">
    <!-- <input class="btn btn-outline-dark" type="button" onclick="sendMessage(total.value)" value="Set" /> -->
   
    &nbsp;
    <br>
    <select id="call status">
        <option value='Emergency'>emergency</option>
        <option>emergency routine</option>
        <option>calm</option>
    </select>

    <hr>
    
    <!-- <input class="btn btn-outline-success" type="button" onclick="startConv()" value="Answer Call" />  -->
    <button class="btn btn-outline-success" type="button" onclick="startConv()" value="Answer Call"><i class="fas fa-phone-volume"></i> Answer Call</button>
    <div class="table-container">
        <table class="table" id="openConversations" border="1">
            <thead class="thead-dark">
                <tr>
                    <th>Start Time</th>
                    <th>City</th>
                    <th>Topic</th>
                    <th>Language</th>
                    <th>Gender</th>
                    <th>Age</th>
                    <th>End</th>
                </tr>
            </thead>
        </table>
    </div>


    <!-- Footer -->

    <footer class="footer">
