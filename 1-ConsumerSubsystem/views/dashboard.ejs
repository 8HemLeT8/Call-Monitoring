    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&family=Ubuntu&display=swap"
        rel="stylesheet">

    <!-- css link -->
    <link rel="stylesheet" href="css/styles.css">

    <!-- Chart.js  -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>

